<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="134dp"
            android:layout_height="match_parent"
            android:padding="3dip"
            android:text="@string/account"
            android:textSize="30dp" />
    </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/person" />

        <TextView
            android:id="@+id/account_username"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:text="username_slot"
            android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:text="@string/user_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="22dip"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/account_user_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="name slot"
            android:padding="22dip"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:text="@string/longest_login_streak"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="22dip"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/account_longest_streak"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="longest streak slot"
            android:padding="22dip"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:text="@string/current_login_streak"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="22dip"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/account_current_streak"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="current streak slot"
            android:padding="22dip"/>
    </LinearLayout>
        <Button
            android:id="@+id/view_statistic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/view_statistic"/>
    </LinearLayout>
</ScrollView>
